{% extends 'default_layout.dhtml' %}

{% block title %}
	Log in
{% endblock %}

{% block heading %}
	Log in
{% endblock %}

{% block body %}
	{% if form.errors %}
		<div class="error-message">Please check your user name and password
			and try again.</div>
	{% endif %}
	
	<form method="post">
		{% csrf_token %}
		<table>
			<tr>
				<th><label for="id_username">User name</label></th>
				<td>{{ form.username }}</td>
			</tr>
			<tr>
				<th><label for="id_password">Password</label></th>
				<td>{{ form.password }}</td>
			</tr>
			<tr>
				<th>&nbsp;</th>
				<td><input type="submit" value="Login" /></td>
			</tr>
		</table>
	</form>
{% endblock %}