<html>
	<head>
		<title>{{ global.app_title }} | {% block title %}{% endblock %}</title>
		<link rel="stylesheet" href="{{ STATIC_URL }}css/global.css" />
		<link rel="stylesheet" href="{{ STATIC_URL }}css/colours.css" />
	</head>
	<body>
		<h1>{{ global.app_title }}</h1>
		<ul class="main_menu tabs level1">
			{% for menu_item in global.main_menu %}
				<li {% if menu_item.href == global.path %}class="selected"{% endif %}
					><a href="{{ menu_item.href }}">{{ menu_item.title }}</a></li>
			{% endfor %}

			{% if user.username %}
				<li {% if menu_item.href == global.path %}class="selected"{% endif %}
					><a href="{% url logout %}">Log out</a></li>
			{% else %}
				<li {% if menu_item.href == global.path %}class="selected"{% endif %}
					><a href="{% url login %}">Log in</a></li>
			{% endif %}
		</ul>
		<h2>{% block heading %}{% endblock %}</h2>
		{% block body %}
		Default Body
		{% endblock %}
	</body>
</html> 